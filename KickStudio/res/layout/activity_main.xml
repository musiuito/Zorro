<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainScreen"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">
<TextView
    android:id="@+id/choice"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/choice_msg"/>
<TextView android:id="@+id/countHeading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/playing"/>
<LinearLayout
    android:id="@+id/counterFields"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <EditText android:id="@+id/displayLeftCounter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.03"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint=""/>
    <EditText
        android:id="@+id/displayRightCounter"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_weight="0.02"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint=""/>
</LinearLayout>
<LinearLayout
    android:id="@+id/irFields"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"><LinearLayout
    android:id="@+id/irLeftFields"
    android:layout_width="164dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <EditText
        android:id="@+id/displayLeftIr1"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint=""/>
    <EditText
        android:id="@+id/displayLeftIr2"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint=""/>
    <EditText
        android:id="@+id/displayLeftIr3"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint=""/>
    <EditText
        android:id="@+id/displayLeftIr4"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint=""/>
</LinearLayout>
    <LinearLayout
        android:id="@+id/irRightFields"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/displayRightIr1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint=""/>
        <EditText
            android:id="@+id/displayRightIr2"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint=""/>
        <EditText
            android:id="@+id/displayRightIr3"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint=""/>
        <EditText
            android:id="@+id/displayRightIr4"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint=""/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>




